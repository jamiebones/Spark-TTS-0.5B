{
  "machine": { "gpu": 1, "vram": 8000, "cpu": 6000, "ram": 6000 },
  "job": {
    "APIVersion": "V1beta1",
    "Spec": {
      "Deal": { "Concurrency": 1 },
      "Docker": {
        "WorkingDirectory": "/app",
        "Entrypoint": ["python", "/app/src/run_inference.py"],
        "EnvironmentVariables": [
          "INPUT={{ js .input }}",
          "PROMPT_TEXT={{ js .prompt_text | default \"You can generate a customized voice by adjusting parameters such as pitch and speed\" }}",
          "PROMPT_SPEECH_PATH={{ js .prompt_speech_path | default \"/app/audio/voice.wav\" }}"
        ],
        "Image": "texttospeech:v1"
      },
      "Engine": "Docker",
      "Network": { "Type": "None" },
      "Outputs": [{ "Name": "outputs", "Path": "/outputs" }],
      "Resources": { "GPU": "1", "CPU": "2", "Memory": "8Gb" },
      "Timeout": 600
    }
  }
}
